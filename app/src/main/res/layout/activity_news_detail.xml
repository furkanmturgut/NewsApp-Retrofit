<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewsDetailActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Haber DetaylarÄ±"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:id="@+id/text_detail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"></TextView>

    <ImageView
        android:id="@+id/image_detail"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:layout_below="@id/text_detail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"></ImageView>

    <TextView
        android:id="@+id/text_news"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:layout_below="@id/image_detail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Haber burada olacak."
        android:textColor="@color/black"
        android:textSize="16sp"></TextView>

    <WebView
        android:layout_marginTop="7dp"
        android:layout_below="@id/text_news"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/webView"></WebView>


</RelativeLayout>